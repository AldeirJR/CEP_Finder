@model DevAldeir.AppCEP_Finder.Models.EtiquetaViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Etiqueta</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.7.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h1>Etiqueta</h1>

        <div class="card">
            <div class="card-body">
                <h3>Destinatário:</h3>
                <p>Nome: @Model.DestinatarioNome</p>
                <p>Endereço: @Model.Destinatario @Model.DestinatarioNumero @Model.DestinatarioComplemento</p>
                <p>Bairro: @Model.DestinatarioBairro</p>
                <p>Cidade: @Model.DestinatarioCidade - @Model.DestinatarioEstado</p>
                <p>CEP: @Model.DestinatarioCep</p>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <h3>Remetente:</h3>
                <p>Nome: @Model.RemetenteNome</p>
                <p>Endereço: @Model.Remetente @Model.RemetenteNumero @Model.RemetenteComplemento</p>
                <p>Bairro: @Model.RemetenteBairro</p>
                <p>Cidade: @Model.RemetenteCidade - @Model.RemetenteEstado</p>
                <p>CEP: @Model.RemetenteCep</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.7.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
